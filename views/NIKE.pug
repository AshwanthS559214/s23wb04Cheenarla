extends layout

block content
  h1= title
  p Welcome back to #{title} modifed by Ashwanth Reddy Cheemarla

  - results = [{ nike: "Shoes", size: "large", cost: 3000 },{ nike: "Slides", size: "med", cost: 2400 },{ nike: "Belt", size: "small", cost: 1080 }];
  div.container-fluid 
    -
    div.row 
    -
    each item, index in results
        div.col-sm-6
            h2= item.nike
            p= item.nike_size 
            p= "cost: $"+item.cost.toFixed(2)
            div.row
                each prop, i in Object.keys(item)
                    div(col-sm-2,  onclick=`buy(${index})`)
                        p #{Object.keys(item)[i]}: #{item[prop]}

        
    script.
        function buy (index){
            alert (`You purchased item ${index+1}`)    
        }